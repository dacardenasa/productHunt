<!DOCTYPE html>
<html>
  <head>
    <title>ProductHunt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "Product Hunt", root_path, class: "nav-link" %>
            </li>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          </form>
          <ul class="navbar-nav">
            <% if signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle avatar" data-toggle="dropdown">
                  <img src="<%= Gravatar.new("#{current_user.email}").image_url %>" class="img-circle" />
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Salir", logout_path, method: :delete %></li>
                </ul>
              </li>
              <li><%= link_to fa_icon("plus-square").html_safe, new_product_path %></li>
            <% else %>
              <li class="nav-item">
                <%= link_to "RegÃ­strate", new_user_path %>
              </li>
              <li class="nav-item">
                <%= link_to "Login", login_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>    
    
    <% if flash[:notice] %>
      <div class="alert alert-info text-center"><%= flash[:notice] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
