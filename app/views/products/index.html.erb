<div class="container">
  <div class="row">
    <div class="col-sm-12">
    <h1>Productos</h1>

    <% if signed_in? %>
    <div  class="text-right mb-3">
      <%= link_to "Publicar Producto", new_product_path, class: "btn btn-primary" %>
    </div>
    <% end %>

      <table class="table">
      <thead>
        <tr>
          <th>id</th>
          <th>Name</th>
          <th>Url</th>
          <th>Description</th>
          <% if signed_in? %>
          <th></th>
          <th></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, product %></td>
            <td><a href="<%= product.url %>" target="_blank"><%= product.url %></a></td>
            <td><%= product.description %></td>
            <% if signed_in? %>
              <td><%= link_to "Editar", edit_product_path(product) %></td>
              <td><%= link_to "Eliminar", product, method: :delete, data: { confirm: "Â¿Esta seguro de eliminar este producto?" } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>